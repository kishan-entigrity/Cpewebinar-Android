<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.entigrity.fragments.FavoritesFragment" />


    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.design.widget.TabLayout
            android:id="@+id/tabs_favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relprogress"
            android:background="@color/colorPrimary"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/White"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/White"
            app:tabTextAppearance="@style/MineCustomTabText"
            app:tabTextColor="@color/fav_tab_unselected_color" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_favorite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tabs_favorite"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


    </RelativeLayout>
</layout>