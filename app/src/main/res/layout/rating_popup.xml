<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@color/White">

        <RelativeLayout
            android:id="@+id/rel_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">


            <com.entigrity.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/review_popup_header"
                android:textColor="@color/feedback_title"
                android:textSize="@dimen/_15sdp"
                app:font_text="SFUIDisplay-Bold.ttf" />

            <ImageView
                android:id="@+id/ivclose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:src="@mipmap/review_popup_close"
                android:tint="@color/webinar_status" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel_top"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:orientation="vertical">


            <com.entigrity.view.CustomEditTextView
                android:id="@+id/edt_subject"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/editext_background"
                android:hint="@string/str_subject"
                android:imeOptions="actionNext"
                android:inputType="textMultiLine|textCapWords"
                android:paddingLeft="@dimen/_5sdp"
                android:scrollbars="vertical"
                android:scrollHorizontally="false"
                android:singleLine="true"
                android:textColor="@color/feedback_field"
                android:textColorHint="@color/feedback_field"
                android:textSize="@dimen/_12sdp"
                app:font_text="Montserrat-Medium.ttf" />


            <com.entigrity.view.CustomEditTextView
                android:id="@+id/edt_review"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_below="@+id/str_header"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/editext_background"
                android:gravity="top|left"
                android:hint="@string/str_your_name"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingTop="@dimen/_5sdp"
                android:scrollbars="vertical"
                android:scrollHorizontally="false"
                android:textColor="@color/feedback_field"
                android:textColorHint="@color/feedback_field"
                android:textSize="@dimen/_12sdp"
                app:font_text="Montserrat-Medium.ttf" />

            <com.entigrity.view.CustomButtonView
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/str_forgotpassword"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@color/webinar_status"
                android:text="@string/str_submit"
                android:textColor="@color/White"
                android:textSize="@dimen/_15sdp"
                app:font_button="SFUIDisplay-Bold.ttf" />


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>