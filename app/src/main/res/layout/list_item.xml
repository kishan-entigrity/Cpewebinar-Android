<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lv_topics_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_30sdp"
    android:background="@color/White">

    <com.entigrity.view.CustomTextView
        android:id="@+id/itemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_toLeftOf="@+id/cbselection"
        android:inputType="textMultiLine"
        android:textColor="@color/subcategory_topics"
        android:textSize="@dimen/_12sdp"
        app:font_text="Montserrat-Regular.ttf" />


    <CheckBox
        android:id="@+id/cbselection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_5sdp"
        android:checked="true"
        android:button="@drawable/checkbox_selection" />


</RelativeLayout>





