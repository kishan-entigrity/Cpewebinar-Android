<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">


            <com.entigrity.view.CustomTextView
                android:id="@+id/tv_webinar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:ellipsize="end"
                android:inputType="textMultiLine"
                android:textAllCaps="true"
                android:textColor="@color/my_credit_header_username"
                android:textSize="@dimen/_10sdp"
                app:font_text="Montserrat-SemiBold.ttf" />

            <com.entigrity.view.CustomTextView
                android:id="@+id/tv_speaker_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/my_credit_header_email_id"
                android:textSize="@dimen/_10sdp"
                app:font_text="Montserrat-Medium.ttf" />


            <RelativeLayout
                android:id="@+id/rel_main"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:gravity="center_vertical">

                <com.entigrity.view.CustomTextView
                    android:id="@+id/tv_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:ems="4"
                    android:textColor="@color/my_credit_header_email_id"
                    android:textSize="@dimen/_10sdp"
                    app:font_text="Montserrat-Medium.ttf" />


                <View
                    android:id="@id/view_webinartopic"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/tv_credit"
                    android:background="@color/my_credit_header_email_id">


                </View>


                <com.entigrity.view.CustomButtonView
                    android:id="@+id/btn_webinar_type"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/view_webinartopic"
                    android:background="@drawable/rounded_webinar_status"
                    android:gravity="center"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_6sdp"
                    app:font_button="Montserrat-Medium.ttf" />


                <com.entigrity.view.CustomButtonView
                    android:id="@+id/tv_webinar_status"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/my_credit_status"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    android:textColor="@color/theme_background"
                    android:textSize="@dimen/_6sdp"
                    app:font_button="Montserrat-Regular.ttf" />


                <com.entigrity.view.CustomButtonView
                    android:id="@+id/btn_certification_download"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/rounded_webinar_status"
                    android:gravity="center"
                    android:text="Download Certificate"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_6sdp"
                    android:visibility="gone"
                    app:font_button="Montserrat-Regular.ttf" />


            </RelativeLayout>

            <com.entigrity.view.CustomTextView
                android:id="@+id/tv_job_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_main"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/_minus2sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/my_credit_header_email_id"
                android:textSize="@dimen/_10sdp"
                app:font_text="Montserrat-Medium.ttf" />

            <com.entigrity.view.CustomTextView
                android:id="@+id/webinar_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/_2sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/my_credit_header_email_id"
                android:textSize="@dimen/_10sdp"
                app:font_text="Montserrat-Medium.ttf" />


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>