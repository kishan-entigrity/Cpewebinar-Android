<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.entigrity.view.CustomTextView
        android:id="@+id/tv_webinar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_toLeftOf="@+id/tv_webinar_price_status"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/str_basic_management"
        android:textColor="@color/home_topbar_bgcolor"
        android:textSize="@dimen/_11sdp"
        app:font_text="Montserrat-SemiBold.ttf" />


    <com.entigrity.view.CustomTextView
        android:id="@+id/tv_webinar_price_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right|center_vertical"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:text="@string/str_price_status"
        android:textColor="@color/home_topbar_bgcolor"
        android:textSize="@dimen/_12sdp"
        app:font_text="Montserrat-Bold.ttf" />


    <com.entigrity.view.CustomTextView
        android:id="@+id/tv_webinar_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_webinar_title"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/fav_date_time"
        android:textSize="@dimen/_9sdp"
        app:font_text="Montserrat-Medium.ttf" />


    <com.entigrity.view.CustomTextView
        android:id="@+id/tv_webinar_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_webinar_title"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_toRightOf="@+id/tv_webinar_date"
        android:textColor="@color/fav_date_time"
        android:textSize="@dimen/_9sdp"
        app:font_text="Montserrat-Medium.ttf" />

    <ImageView
        android:id="@+id/dv_time_duration"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_10sdp"
        android:layout_below="@+id/tv_webinar_title"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_toRightOf="@+id/tv_webinar_time"
        android:background="@mipmap/webinar_vertical_divider" />


    <com.entigrity.view.CustomTextView
        android:id="@+id/tv_duration_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_webinar_title"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_toRightOf="@+id/dv_time_duration"
        android:text="@string/str_fav_duration"
        android:textColor="@color/fav_date_time"
        android:textSize="@dimen/_9sdp"
        app:font_text="Montserrat-Medium.ttf" />


    <RelativeLayout
        android:id="@+id/relmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_webinar_date"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_5sdp">


        <ImageView
            android:id="@+id/ivwebinar_thumbhel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:scaleType="fitXY"
            android:src="@mipmap/webinar_placeholder" />

        <FrameLayout
            android:id="@+id/rel_bg_score"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignBottom="@+id/ivwebinar_thumbhel"
            android:background="@color/inst_background">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">


                <com.entigrity.view.CustomTextView
                    android:id="@+id/tv_webinar_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_12sdp"
                    app:font_text="Montserrat-Medium.ttf" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <!--  <ImageView
                          android:id="@+id/ivshare"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:layout_marginLeft="@dimen/_5sdp"
                          android:background="@mipmap/share" />


                      <CheckBox
                          android:id="@+id/ivfavorite"
                          android:layout_width="@dimen/_10sdp"
                          android:layout_height="@dimen/_10sdp"
                          android:layout_centerVertical="true"
                          android:layout_marginLeft="@dimen/_10sdp"
                          android:layout_toRightOf="@+id/ivshare"
                          android:background="@drawable/like_icon"
                          android:button="@null"
                          android:checked="true"
                          android:stateListAnimator="@animator/scale" />


                      <com.entigrity.view.CustomTextView
                          android:id="@+id/tv_favorite_count"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:layout_marginRight="@dimen/_5sdp"
                          android:layout_toRightOf="@+id/ivfavorite"
                          android:textColor="@color/White"
                          android:textSize="@dimen/_10sdp"
                          app:font_text="Montserrat-Medium.ttf" />


                      <ImageView
                          android:id="@+id/ivduration"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:layout_marginLeft="@dimen/_10sdp"
                          android:layout_toLeftOf="@+id/tv_attend_views"
                          android:src="@mipmap/group" />-->

                    <ImageView
                        android:id="@+id/ivshare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_toLeftOf="@+id/ivfavorite"
                        android:src="@mipmap/share" />


                    <ImageView
                        android:id="@+id/ivfavorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_toLeftOf="@+id/tv_favorite_count"
                        android:src="@drawable/like" />


                    <com.entigrity.view.CustomTextView
                        android:id="@+id/tv_favorite_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_toLeftOf="@+id/ivgroup"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_12sdp"
                        app:font_text="Montserrat-Medium.ttf" />


                    <ImageView
                        android:id="@+id/ivgroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_toLeftOf="@+id/tv_attend_views"
                        android:src="@mipmap/group" />


                    <com.entigrity.view.CustomTextView
                        android:id="@+id/tv_attend_views"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:textColor="@color/White"
                        android:textSize="@dimen/_12sdp"
                        app:font_text="Montserrat-Medium.ttf" />


                </RelativeLayout>


            </RelativeLayout>


        </FrameLayout>


        <RelativeLayout
            android:id="@+id/relbottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel_bg_score"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_2sdp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/ivmain">


                <com.entigrity.view.CustomTextView
                    android:id="@+id/tv_favorite_speaker_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/str_fav_instructor_name"
                    android:textColor="@color/fav_bottom_text_color"
                    android:textSize="@dimen/_10sdp"
                    app:font_text="Montserrat-Medium.ttf" />


            </RelativeLayout>


            <ImageView
                android:id="@+id/ivmain"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_10sdp"
                android:layout_centerInParent="true"
                android:background="@mipmap/webinar_vertical_divider" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/ivmain">

                <com.entigrity.view.CustomTextView
                    android:id="@+id/tv_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/str_fav_company_name"
                    android:textColor="@color/fav_bottom_text_color"
                    android:textSize="@dimen/_10sdp"
                    app:font_text="Montserrat-Medium.ttf" />


            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/relbottom"
            android:visibility="invisible">


        </RelativeLayout>


    </RelativeLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@+id/tv_webinar_date"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_10sdp">

        <com.entigrity.view.CustomButtonView
            android:id="@+id/credit_status"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/rounded_credit_home"
            android:textColor="@color/White"
            android:textSize="@dimen/_9sdp"
            app:font_button="Montserrat-Medium.ttf" />


        <com.entigrity.view.CustomButtonView
            android:id="@+id/webinar_status"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/rounded_webinar_status"
            android:textAllCaps="false"
            android:textColor="@color/White"
            android:textSize="@dimen/_9sdp"
            app:font_button="Montserrat-Medium.ttf" />


    </FrameLayout>


</RelativeLayout>