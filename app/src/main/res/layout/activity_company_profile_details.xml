<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activity"
            type="com.entigrity.activity.CompanyDetailsActivity" />
    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White">


        <RelativeLayout
            android:id="@+id/rel_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/forgot_password_header"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:id="@+id/ivback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/_5sdp"
                android:src="@mipmap/back" />


            <com.entigrity.view.CustomTextView
                android:id="@+id/tv_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_40sdp"
                android:text="@string/company_details"
                android:textColor="@color/White"
                android:textSize="@dimen/_14sdp"
                app:font_text="SFUIDisplay-Regular.ttf" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/reltopdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel_header"
            android:background="@color/inst_details_profile_background">


            <RelativeLayout
                android:id="@+id/reltop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivCompanylogo"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/placeholder" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:src="@mipmap/favorite"

                    />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_companyname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reltop"
                android:layout_marginTop="@dimen/_10sdp">

                <com.entigrity.view.CustomTextView
                    android:id="@+id/tv_companyname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/company_name"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_10sdp"
                    app:font_text="SFUIDisplay-Regular.ttf" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_companyname"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">


                <com.entigrity.view.CustomTextView
                    android:id="@+id/tv_state_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="New York,USA"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_8sdp"
                    app:font_text="SFUIDisplay_Regular.ttf" />


            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rel_review"
            android:layout_below="@+id/reltopdetails">

            <android.support.design.widget.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relprogress"
                android:background="@color/White"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/theme_background"
                app:tabMode="fixed"
                app:tabTextAppearance="@style/MineCustomTabText"
                app:tabTextColor="@color/write_review_text" />


            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/tabs"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relbottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#001F44"
            android:padding="@dimen/_10sdp">


            <com.entigrity.view.CustomTextView
                android:id="@+id/tv_webinar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:gravity="center"
                android:text="@string/company_webinar"
                android:textColor="@color/White"
                android:textSize="@dimen/_14sdp"
                app:font_text="SFUIDisplay-Bold.ttf" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:background="@color/White" />


            <com.entigrity.view.CustomTextView
                android:id="@+id/tv_instructor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:gravity="center"
                android:text="@string/company_speakers"
                android:textColor="@color/White"
                android:textSize="@dimen/_14sdp"
                app:font_text="SFUIDisplay-Bold.ttf" />

        </RelativeLayout>


    </RelativeLayout>

</layout>