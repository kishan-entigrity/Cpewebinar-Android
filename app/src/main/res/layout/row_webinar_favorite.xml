<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White">


    <com.entigrity.view.CustomTextView
        android:id="@+id/tv_webinar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/str_basic_management"
        android:textColor="@color/fav_webinar_title"
        android:textSize="@dimen/_12sdp"
        app:font_text="SFUIDisplay-Regular.ttf" />


    <com.entigrity.view.CustomTextView
        android:id="@+id/tv_webinar_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_webinar_title"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="@string/str_date_fav"
        android:textColor="@color/fav_date_time"
        android:textSize="@dimen/_9sdp"
        app:font_text="SFUIDisplay-Regular.ttf" />


    <com.entigrity.view.CustomTextView
        android:id="@+id/tv_webinar_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_webinar_title"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_toRightOf="@+id/tv_webinar_date"
        android:text="@string/str_time_fav"
        android:textColor="@color/fav_date_time"
        android:textSize="@dimen/_9sdp"
        app:font_text="SFUIDisplay-Regular.ttf" />


    <RelativeLayout
        android:id="@+id/relmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_webinar_date"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_5sdp">


        <ImageView
            android:id="@+id/ivwebinar_thumbhel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/webinar_placeholder"


            />


        <RelativeLayout
            android:id="@+id/rel_bg_score"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@+id/ivwebinar_thumbhel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_minus10sdp"
            android:background="@color/fav_background_credit">


            <com.entigrity.view.CustomTextView
                android:id="@+id/tv_cpe_credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="@string/str_credit_value"
                android:textColor="@color/White"
                android:textSize="@dimen/_8sdp"
                app:font_text="SFUIDisplay-Regular.ttf" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_5sdp"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/webinars_favorite" />

                <com.entigrity.view.CustomTextView
                    android:id="@+id/tv_favorite_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="@string/str_fav_count"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_8sdp"
                    app:font_text="SFUIDisplay-Regular.ttf" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@mipmap/webinars_view" />


                <com.entigrity.view.CustomTextView
                    android:id="@+id/tv_favorite_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="@string/str_fav_views"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_8sdp"
                    app:font_text="SFUIDisplay-Regular.ttf" />


            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel_bg_score"
            android:layout_marginTop="@dimen/_5sdp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@mipmap/webinars_user" />


                <com.entigrity.view.CustomTextView
                    android:id="@+id/tv_favorite_speaker_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:text="@string/str_fav_instructor_name"
                    android:textColor="@color/fav_bottom_text_color"
                    android:textSize="@dimen/_8sdp"
                    app:font_text="SFUIDisplay-Regular.ttf" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/webinars_company" />


                <com.entigrity.view.CustomTextView
                    android:id="@+id/tv_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:text="@string/str_fav_company_name"
                    android:textColor="@color/fav_bottom_text_color"
                    android:textSize="@dimen/_8sdp"
                    app:font_text="SFUIDisplay-Regular.ttf" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/webinars_clock" />


                <com.entigrity.view.CustomTextView
                    android:id="@+id/tv_duration_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_minus1sdp"
                    android:text="@string/str_fav_duration"
                    android:textColor="@color/fav_bottom_text_color"
                    android:textSize="@dimen/_8sdp"
                    app:font_text="SFUIDisplay-Regular.ttf" />


            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_webinar_date"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp">

        <com.entigrity.view.CustomButtonView
            android:id="@+id/btnPrice"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/rectangle"
            android:text="@string/str_price_value"
            android:textColor="@color/White"
            android:textSize="@dimen/_10sdp"
            app:font_button="SFUIDisplay-Regular.ttf"

            />

    </FrameLayout>


</RelativeLayout>