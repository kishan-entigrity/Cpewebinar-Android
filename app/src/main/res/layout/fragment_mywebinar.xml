<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <variable
            name="fragment"
            type="com.entigrity.fragments.MyWebinarFragment" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White">


        <android.support.design.widget.TabLayout
            android:id="@+id/mywebinartab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rvtitle"
            android:background="@color/child_tab_background_home"
            app:tabBackground="@drawable/tab_color_selector"
            app:tabGravity="fill"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/White"
            app:tabTextAppearance="@style/MineCustomTabText"
            app:tabTextColor="@color/White" />


        <android.support.v4.view.ViewPager
            android:id="@+id/mywebinarviewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/mywebinartab"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </RelativeLayout>


</layout>