<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.entigrity.fragments.ViewProfileFragment" />
    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F7"
        android:scrollIndicators="none"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/White"
            android:orientation="horizontal"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.entigrity.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/view_profile_firstname"
                    android:textColor="@color/edit_profile_lable_colcr"
                    android:textSize="@dimen/_12sdp"
                    app:font_text="SFUIDisplay-Medium.ttf" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#FAFAFB" />


                <com.entigrity.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/view_profile_lastname"
                    android:textColor="@color/edit_profile_lable_colcr"
                    android:textSize="@dimen/_12sdp"
                    app:font_text="SFUIDisplay-Medium.ttf" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#FAFAFB" />

                <com.entigrity.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/view_profile_email"
                    android:textColor="@color/edit_profile_lable_colcr"
                    android:textSize="@dimen/_12sdp"
                    app:font_text="SFUIDisplay-Medium.ttf" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#FAFAFB" />

                <com.entigrity.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/view_profile_firm_name"
                    android:textColor="@color/edit_profile_lable_colcr"
                    android:textSize="@dimen/_12sdp"
                    app:font_text="SFUIDisplay-Medium.ttf" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#FAFAFB" />

                <com.entigrity.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/view_profile_mobile_number"
                    android:textColor="@color/edit_profile_lable_colcr"
                    android:textSize="@dimen/_12sdp"
                    app:font_text="SFUIDisplay-Medium.ttf" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#FAFAFB" />

                <com.entigrity.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/view_profile_country"
                    android:textColor="@color/edit_profile_lable_colcr"
                    android:textSize="@dimen/_12sdp"
                    app:font_text="SFUIDisplay-Medium.ttf" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#FAFAFB" />

                <com.entigrity.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/view_profile_state"
                    android:textColor="@color/edit_profile_lable_colcr"
                    android:textSize="@dimen/_12sdp"
                    app:font_text="SFUIDisplay-Medium.ttf" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#FAFAFB" />

                <com.entigrity.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/view_profile_city"
                    android:textColor="@color/edit_profile_lable_colcr"
                    android:textSize="@dimen/_12sdp"
                    app:font_text="SFUIDisplay-Medium.ttf" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#FAFAFB" />

                <com.entigrity.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/view_profile_zipcode"
                    android:textColor="@color/edit_profile_lable_colcr"
                    android:textSize="@dimen/_12sdp"
                    app:font_text="SFUIDisplay-Medium.ttf" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#FAFAFB" />

                <com.entigrity.view.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/view_profile_who_you_are"
                    android:textColor="@color/edit_profile_lable_colcr"
                    android:textSize="@dimen/_12sdp"
                    app:font_text="SFUIDisplay-Medium.ttf" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#FAFAFB" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.entigrity.view.CustomTextView
                    android:id="@+id/tv_firstname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    app:font_text="SFUIDisplay-Medium.ttf" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#FAFAFB" />


                <com.entigrity.view.CustomTextView
                    android:id="@+id/tv_lastname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    app:font_text="SFUIDisplay-Medium.ttf" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#FAFAFB" />


                <com.entigrity.view.CustomTextView
                    android:id="@+id/tv_emailname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    app:font_text="SFUIDisplay-Medium.ttf" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#FAFAFB" />


                <com.entigrity.view.CustomTextView
                    android:id="@+id/tv_firmname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    app:font_text="SFUIDisplay-Medium.ttf" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#FAFAFB" />

                <com.entigrity.view.CustomTextView
                    android:id="@+id/tv_mobilenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    app:font_text="SFUIDisplay-Medium.ttf" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#FAFAFB" />


                <com.entigrity.view.CustomTextView
                    android:id="@+id/tv_contry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    app:font_text="SFUIDisplay-Medium.ttf" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#FAFAFB" />

                <com.entigrity.view.CustomTextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    app:font_text="SFUIDisplay-Medium.ttf" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#FAFAFB" />

                <com.entigrity.view.CustomTextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    app:font_text="SFUIDisplay-Medium.ttf" />


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#FAFAFB" />


                <com.entigrity.view.CustomTextView
                    android:id="@+id/tv_zipcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    app:font_text="SFUIDisplay-Medium.ttf" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#FAFAFB" />

                <com.entigrity.view.CustomTextView
                    android:id="@+id/tv_who_you_are"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    app:font_text="SFUIDisplay-Medium.ttf" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#FAFAFB" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</layout>