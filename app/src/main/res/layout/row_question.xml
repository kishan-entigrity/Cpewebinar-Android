<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="@color/White">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <com.entigrity.view.CustomTextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/rev_number_round"
            android:gravity="center"
            android:textColor="@color/White"
            android:textSize="@dimen/_12sdp"
            app:font_text="Montserrat-Bold.ttf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.entigrity.view.CustomTextView
                android:id="@+id/tv_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:maxLines="3"
                android:textColor="@color/black_full"
                android:textSize="@dimen/_12sdp"
                app:font_text="Montserrat-Medium.ttf" />


            <LinearLayout
                android:id="@+id/lv_A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <CheckBox
                    android:id="@+id/checkbox_select_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:button="@drawable/checkbox_question_selection"
                    android:enabled="false" />

                <com.entigrity.view.CustomTextView
                    android:id="@+id/tv_ans_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:ems="20"
                    android:inputType="textMultiLine"
                    android:singleLine="true"
                    android:textColor="@color/subcategory_topics"
                    android:textSize="@dimen/_11sdp"
                    app:font_text="Montserrat-Medium.ttf" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/lv_B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <CheckBox
                    android:id="@+id/checkbox_select_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:button="@drawable/checkbox_question_selection"
                    android:enabled="false" />

                <com.entigrity.view.CustomTextView
                    android:id="@+id/tv_ans_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:ems="20"
                    android:inputType="textMultiLine"
                    android:singleLine="true"
                    android:textColor="@color/subcategory_topics"
                    android:textSize="@dimen/_11sdp"
                    app:font_text="Montserrat-Medium.ttf" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lv_C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <CheckBox
                    android:id="@+id/checkbox_select_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:button="@drawable/checkbox_question_selection"
                    android:enabled="false" />

                <com.entigrity.view.CustomTextView
                    android:id="@+id/tv_ans_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:ems="20"
                    android:inputType="textMultiLine"
                    android:singleLine="true"
                    android:textColor="@color/subcategory_topics"
                    android:textSize="@dimen/_11sdp"
                    app:font_text="Montserrat-Medium.ttf" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lv_D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp">

                <CheckBox
                    android:id="@+id/checkbox_select_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:button="@drawable/checkbox_question_selection"
                    android:enabled="false" />

                <com.entigrity.view.CustomTextView
                    android:id="@+id/tv_ans_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:ems="20"
                    android:inputType="textMultiLine"
                    android:singleLine="true"
                    android:textColor="@color/subcategory_topics"
                    android:textSize="@dimen/_11sdp"
                    app:font_text="Montserrat-Medium.ttf" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <!--  <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">


      </LinearLayout>


      <com.entigrity.view.CustomTextView
          android:id="@+id/tv_who_attend"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"
          android:textColor="@color/black"
          android:textSize="@dimen/_12sdp"
          app:font_text="Montserrat-Regular.ttf" />
  -->

</RelativeLayout>